-extends "smartmin/list.html"
-load i18n

- block content-title
  %h2.is-size-2.has-text-weight-bold
    %img(src="{{ STATIC_URL }}img/polls_icon.png")
    .is-inline-block.content-title-text
      -trans "Opinions"

- block pre-content
  - if unsynced_polls
    .notification(class="is-info")
      - blocktrans with counter=unsynced_polls|length
        There is/are currently {{ counter }} new poll(s) syncing. Polls are displayed on the public site once they have completely synced their results.

-block table-buttons
  -if view.add_button
    %a.button.is-primary(href="./create/" class="{% if is_rtl_org %}is-pulled-left{% else %}is-pulled-right{% endif %}")
      - trans "+ New Poll"

-block extra-style
  {{block.super}}
  :css
      td.field_created_on, td.field_poll_date {
        white-space: nowrap;
      }

      td.field_sync_status {
        width: 150px;
      }

      td.field_category {
        max-width: 150px;
      }

      td.field_questions {
        text-align: center;
      }

      td.field_featured_responses {
        text-align: center;
      }

      td.field_images {
        text-align: center;
      }