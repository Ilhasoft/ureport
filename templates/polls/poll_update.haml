- extends "smartmin/update.html"


- block extra-style
  :css
    .select2-container {
        width: 75%
    }

    .select2-container .selection {
        width: 100%
    }

    .select2-results__option--selected {
      display: none;
    }

- block extra-script
  :javascript
    $(document).ready(function() {
      $('#id_tags').select2({
          placeholder: 'Select tags',
          maximumSelectionLength: 5,
          width: '100%',
      });
    });